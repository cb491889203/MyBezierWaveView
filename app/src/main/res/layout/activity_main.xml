<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenb.mybezierwaveview.MainActivity">

    <com.example.chenb.mybezierwaveview.WaveView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Hello World!"
        app:wave_begin_color="#55ab6c73"
        app:wave_count="3"
        app:wave_end_color="#dd553982"
        app:wave_height="80px"
        app:wave_level_height="70dp"
        app:wave_speed="5"
        app:wave_speed_offset="0.7"
        app:wave_wavecolor="#880000aa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addcount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addcount"
            android:text="addcount"
            />

        <Button
            android:id="@+id/addspeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="addspeed"
            android:text="addspeed"
            />

        <Button
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="stop"
            android:text="stop"
            />

        <Button
            android:id="@+id/changeY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="changeY"
            android:text="changeY"
            />

        <Button
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="start"
            android:text="start"
            />


    </LinearLayout>


</RelativeLayout>
